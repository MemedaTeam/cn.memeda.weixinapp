        <div class="container">
            <a href="javascript:history.go(-1);" class="pre_icon"><img src="/Content/images/liu_06.png"></a>
            <div class="head_mid">
                @if (ViewBag.subTitle == null || string.IsNullOrEmpty(ViewBag.subTitle))
                {
                    <img src="/Content/images/liu_03.png">
                }
                else
                {
                    <p>@ViewBag.subTitle</p>
                }
            </div>
        </div>
    </header>
    <!-----------头部结束--------------->
    @RenderBody()
